<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Home</title>
</head>
<body class="bg-primary text-light">
    {{!-- Content Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ms-4 p-2">
            <a class="navbar-brand" href="/"><img width="80px" src="/assets/img/user/tsubatsa.png" alt="Tsubasa"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-primary active" aria-current="page" href="/">Home</a>
                    </li>
                </ul>
                <div class="d-flex me-4">
                    <a href="/create"><button class="btn btn-outline-primary" type="submit">Add Hero</button></a>
                </div>
            </div>
        </div>
    </nav>
    {{!-- End Content Navbar --}}

    {{!-- Content Card Hero --}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-evenly flex-wrap mx-auto p-5">
                {{#each data}}
                <div class="card m-4 bg-light" style="width: 18rem;">
                    <img style="height: 300px;" src='/uploads/{{this.picture}}' class="rounded m-2" alt="{{this.name}}">
                    <div class="card-body">
                        <a href="/detail/{{this.id}}" class="text-decoration-none text-light">
                            <h5 class="card-title text-primary">{{this.name}}</h5>
                        </a>
                        <p class="card-text text-primary">{{this.type}}</p>
                        <div>
                            <a href="/update/{{this.id}}" class="btn btn-warning" style="width: 49%;">Edit</a>
                            <form action="/delete/{{this.id}}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" style="width: 49%;">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{!-- End Content Card Hero --}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
