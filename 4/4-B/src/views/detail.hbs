<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Hero Details</title>
</head>
<body class="bg-primary text-light">
    {{!-- Content Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ms-4 p-2">
            <a class="navbar-brand" href="/"><img width="80px" src="../assets/img/user/tsubatsa.png" alt="Tsubatsa"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-primary active" aria-current="page" href="/">Detail Hero</a>
                    </li>
                </ul>
                <div class="d-flex me-4">
                    <a href="/create"><button class="btn btn-outline-primary" type="button">Add Hero</button></a>
                </div>
            </div>
        </div>
    </nav>
    {{!-- End Content Navbar --}}

    {{!-- Content Detail Hero --}}
    <div class="container my-5">
        <h1 class="text-center mb-4">{{data.hero}}</h1>
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 650px;">
                    <img style="height: 600px;" src='/uploads/{{data.picture}}' class="rounded m-3" alt="{{data.hero}}" />
                    <div class="card-body mx-3">
                        <h5 class="card-title text-primary">{{data.hero}}</h5>
                        <p class="card-text text-primary">{{data.class}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- End Content Detail Hero --}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
